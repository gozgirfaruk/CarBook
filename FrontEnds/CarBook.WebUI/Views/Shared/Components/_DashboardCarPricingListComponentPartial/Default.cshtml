@using CarBook.Dtos.CarPricingDtos
@model IEnumerable<ResultCarPricingListWithModelDto>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Araç Fiyatları</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Son eklenen 6 araç için fiyat listesi gösterilmektedir.
            </p>

            <div class="table-responsive">
                <table class="table table-centered table-hover table-xl mb-0" id="recent-orders">
                    <thead>
                        <tr>
                            <th class="border-top-0">Model</th>
                            <th class="border-top-0">Günlük Ücret</th>
                            <th class="border-top-0">Haftalık Ücret</th>
                            <th class="border-top-0">Aylık Ücret</th>
                        </tr>
                    </thead>
                    <tbody>
                     
                        @foreach (var item in Model)
                        {
                           
                            <tr>

                                <td class="text-truncate">@item.model</td>
                                <td class="text-truncate">₺ @item.dailyAmount</td>
                                <td class="text-truncate">₺ @item.weeklyAmount</td>
                                <td class="text-truncate">₺ @item.dailyAmount</td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>