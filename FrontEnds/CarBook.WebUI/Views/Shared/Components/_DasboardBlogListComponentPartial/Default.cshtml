@model List<ResultBlogDto>
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Yazılan Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                En Popüler Bloglar Listelenmiştir.
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                  <img src="@item.CoverImage" style="height:50px;width:50px; border-radius:15px;"/>
                                   
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5>
                                    <span class="text-muted font-size-12">Blog Başlığı</span>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.CreatedDate.ToString("dd.MM.yyyy")</h5>
                                    <span class="text-muted font-size-12">Tarih</span>
                                </td>
                                <td>
                                    <a href="/Blog/BlogSingle/@item.BlogId" class="btn btn-secondary">Oku</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
