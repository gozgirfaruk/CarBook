@using CarBook.Dtos.CommentDtos
@model LeaveCommentDto

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Bırakın</h3>
    @using (Html.BeginForm("LeaveComment","Blog",FormMethod.Post))
    {
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="hidden" asp-for="blogId" value="@ViewBag.Id"/>
            <input type="text" class="form-control" id="name" asp-for="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" asp-for="email" class="form-control" id="email" required>
        </div>
   
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea asp-for="content" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorumu Kaydet" class="btn py-3 px-4 btn-primary">
        </div>
    }
</div>

