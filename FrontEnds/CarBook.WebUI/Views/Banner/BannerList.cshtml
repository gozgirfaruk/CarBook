
@model List<ResultBannerDto>
@{
    ViewData["Title"] = "BannerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Banner Listesi</h4>
                    <table id="datatable-buttons" class="table table-striped dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Video Açıklama</th>
                                <th>Video</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                        
                                <tr>
                                    <td>1</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.VideoDescription</td>
                                    <td><a href="#" class="btn" style="background-color:mediumseagreen; color:white">İzle</a></td>
                                    <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-info">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>