@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">

        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Araç Girişi</h4>


                <form class="form-horizontal" method="post">
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Araç Kapak Görsel</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="coverImageUrl" placeholder="Araç Kapak Görsel Linki">
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Araç Detay Görsel</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="bigImageUrl" placeholder="Araç Detay Görsel Linki">
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Marka</label>
                        <div class="col-9">
                            @Html.DropDownListFor(x => x.brandId, (List<SelectListItem>)ViewBag.BrandList, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Model</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="model" placeholder="Model">
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Devir</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="km" placeholder="Devir Kilometre">
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Vites Türü</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="transmission" placeholder="Vites Türü">
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Koltuk Sayısı</label>
                        <div class="col-9">
                            <input type="number" class="form-control" asp-for="seat" placeholder="Koltuk Sayısı">
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Bagaj Hacmi</label>
                        <div class="col-9">
                            <input type="number" class="form-control" asp-for="luggage" placeholder="Bagaj Hacmi / Litre">
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Model Yılı</label>
                        <div class="col-9">
                            <input type="number" class="form-control" asp-for="fuel" placeholder="Model Yıl">
                        </div>
                    </div>
                    <div class="form-group mb-0 justify-content-end row">
                        <div class="col-9">
                            <button type="submit" class="btn btn-info waves-effect waves-light">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div> <!-- end card-body-->
        </div>

    </div>
</div>

