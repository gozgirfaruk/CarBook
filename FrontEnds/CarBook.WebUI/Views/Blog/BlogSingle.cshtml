
@{
    ViewData["Title"] = "Blog İçeriği";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Component.InvokeAsync("_HeroComponentPartial")
<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                @await Component.InvokeAsync("_BlogSingleContentComponentPartial" , new {id = ViewBag.Id})
             
           
                <div class="tag-widget post-tag-container mb-5 mt-5">
                    <div class="tagcloud">
                        <a href="#" class="tag-cloud-link">Hayat</a>
                        <a href="#" class="tag-cloud-link">Spor</a>
                        <a href="#" class="tag-cloud-link">Arkadaşlık</a>
                        <a href="#" class="tag-cloud-link">Seyehat</a>
                    </div>
                </div>

                @await Component.InvokeAsync("_BlogSingleAuthorComponentPartial", new {id=ViewBag.Id})
                


                <div class="pt-5 mt-5">
                 
                    <h3 class="mb-5">6 Yorumlar</h3>
                    @await Component.InvokeAsync("_BlogSingleGetCommentsComponentPartial", new { id = ViewBag.Id })
                   
                    <!-- END comment-list -->

                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Leave a comment</h3>
                        <form action="#" class="p-5 bg-light">
                            <div class="form-group">
                                <label for="name">Name *</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="website">Website</label>
                                <input type="url" class="form-control" id="website">
                            </div>

                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
                            </div>

                        </form>
                    </div>
                </div>

            </div> <!-- .col-md-8 -->



            <div class="col-md-4 sidebar ftco-animate">
                <div class="sidebar-box">
                    <form action="#" class="search-form">
                        <div class="form-group">
                            <span class="icon icon-search"></span>
                            <input type="text" class="form-control" placeholder="Type a keyword and hit enter">
                        </div>
                    </form>
                </div>


                @await Component.InvokeAsync("_BlogSingleCategoriesComponentPartial")

                @await Component.InvokeAsync("_BlogSingleRecentBlogComponentPartial")
               

            </div>

        </div>
    </div>
</section>