@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("_HeroComponentPartial")


<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">

            @await Component.InvokeAsync("_AddressComponentPartial")

            <div class="col-md-8 block-9 mb-md-5">
                <form method="post" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="name" placeholder="Adınız" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="email" placeholder="E-mail" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="subject" placeholder="Konu" required>
                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" class="form-control" asp-for="messageBody" placeholder="Mesajınız" required></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>

        @await Html.PartialAsync("/Views/Shared/UILayoutPartial/_MapPartial.cshtml")

    </div>
</section>

