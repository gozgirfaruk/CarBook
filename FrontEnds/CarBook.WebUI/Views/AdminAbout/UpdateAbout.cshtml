@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımızda Güncelleme Sayfası</h4>
                <form class="form-horizontal" method="post">
                    <input type="hidden" asp-for="AboutId" />

                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Hakkımızda Görsel Url</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="ImageUrl">
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Başlık</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="Title" >
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Açıklama</label>
                        <div class="col-9">
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="form-group mb-0 justify-content-end row">
                        <div class="col-9">
                            <button type="submit" class="btn btn-info waves-effect waves-light">Kaydet</button>
                            <a href="/AdminAbout/AboutList" class="btn btn-dark waves-effect">Vazgeç</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>