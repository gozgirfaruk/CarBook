@model CreateMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sosyal Medya Giriş Sayfası</h4>
                <form class="form-horizontal" method="post">

                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Medya Icon</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="Icon" placeholder="Medya Icon">
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Medya Adı</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="Name" placeholder="Medya Adı">
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-3 col-form-label">Medya Url</label>
                        <div class="col-9">
                            <input type="text" class="form-control" asp-for="Url" placeholder="Medya Url">
                        </div>
                    </div>

                    <div class="form-group mb-0 justify-content-end row">
                        <div class="col-9">
                            <button type="submit" class="btn btn-info waves-effect waves-light">Kaydet</button>
                            <a href="/SocialMedia/SocialMediaList" class="btn btn-dark waves-effect">Vazgeç</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>